<p>
	<strong>Title:</strong>
	<%= @article.title %>
</p>
<p>
	<strong>Text:</strong>
	<%= @article.text %>
</p>
<p>
	<i>
	Author:
	<br/>
	<%= image_tag avatar_url(@article.user)+'?s=100' %>
	<br/>
	<%= link_to @article.user.email, @article.user %>
	</i>
</p>
<p>
	Tags:
	<%= @article.tags.map { |t| t.name }.join(', ') %>
</p>

<%= render 'comments/comments', comments: @article.comments.includes(:user) %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>