<h1>Listing articles</h1>

<div id="tag_cloud">
	<b> Popular tags </b>
	<br>
	<% tag_cloud.each do |tag| %>
		<%= link_to tag.name, tag_path(tag) %> 
	<% end %>
</div>
<br>

<%= link_to new_article_path, class: 'btn btn-success' do %>
	<i class="glyphicon glyphicon-plus"></i> New article
<% end %>
<table class="table">
	<tr class="info">
		<th>Id</th>
		<th>Title</th>
		<th>Text</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

	<% @articles.each do |article| %>
		<tr>
			<td><%= article.id %></td>
			<td><%= article.title %></td>
			<td><%= article.text %></td>
			<td><%= link_to 'Show', article_path(article), 
					class: 'btn btn-default btn-sm'%></td>
			<td><%= link_to edit_article_path(article),
					class: 'btn btn-warning btn-sm' do %>
						<i class="glyphicon glyphicon-edit"></i> Edit
			<% end %></td>
			<td><%= link_to article_path(article),
					method: :delete,
					data: {confirm: 'Are you sure?' },
					class: 'btn btn-danger btn-sm' do %>
						<i class="glyphicon glyphicon-remove"></i> Destroy
			<% end %></td>
		</tr>
	<% end %>
</table><br>